@using BeerCss.Blazor.Components.Inputs
@attribute [Stories("Components/Inputs/File")]

<Stories TComponent="FileField">
    <ArgType For="_ => _.Size" Control="ControlType.Select" DefaultValue="Size.Medium" />

    <Story Name="Default">
        <Template>
            <EditForm Context="form" Model="_value">
                <FileField @attributes="context.Args" @bind-Value="_value" />
            </EditForm>
        </Template>
    </Story>
    <Story Name="Help text">
        <Arguments>
            <Arg For="x => x.HelpText" Value="_helpText" />
        </Arguments>
        <Template>
            <EditForm Context="form" Model="_value">
                <FileField TValue="int" @attributes="context.Args" @bind-Value="_value" />
            </EditForm>
        </Template>
    </Story>
</Stories>

@code {
    string? _value = "file.txt";
    string _helpText = "Help me!";
}