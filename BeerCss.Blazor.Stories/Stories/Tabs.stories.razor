                    <Title>Tab 2</Title>
                    <Content>Tab 2 Content</Content>
                </Tab>
                <Tab>
                    <Title>Tab 3</Title>
                    <Content>Tab 3 Content</Content>
                </Tab>
            </Tabs>
        </Template>
    </Story>
</Stories>