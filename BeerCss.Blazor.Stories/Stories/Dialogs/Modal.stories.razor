@using BeerCss.Blazor.Components.Dialogs
@attribute [Stories("Components/Dialogs/Modal")]

<Stories TComponent="Modal">
    <Story Name="Default">
        <Arguments>
            <Arg For="x => x.Open" Value="_open" />
            <Arg For="x => x.Title" Value="_title" />
            <Arg For="x => x.Content" Value="_content" />
            <Arg For="x => x.Nav" Value="_nav" />
        </Arguments>
        <Template>
            <DialogProvider>
                <Modal @attributes="context.Args" />
            </DialogProvider>
        </Template>
    </Story>
    <Story Name="Full screen">
        <Arguments>
            <Arg For="x => x.Open" Value="_open" />
            <Arg For="x => x.Title" Value="_title" />
            <Arg For="x => x.Content" Value="_content" />
            <Arg For="x => x.Nav" Value="_nav" />
            <Arg For="x => x.FullScreen" Value="_fullScreen" />
        </Arguments>
        <Template>
            <DialogProvider>
                <Modal @attributes="context.Args" />
            </DialogProvider>
        </Template>
    </Story>
</Stories>

@code {
    bool _open = true;
    bool _fullScreen = true;
    RenderFragment _title = @<text>I am title</text>;
    RenderFragment _content = @<text>I am dialog content</text>;
    RenderFragment _nav = @<Button>Me do</Button>;
}